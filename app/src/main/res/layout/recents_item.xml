<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="log"
            type="com.rehyapp.calltimer.calllogging.RecentsUIGroupingsObject" />

        <variable
            name="isActivated"
            type="Boolean" />
    </data>

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/log_type_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20sp"
                android:padding="10dp"
                app:imageResource="@{log.groupIconDrawableId}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/log_type_image"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/log_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{log.groupTopText}"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@{log.groupTopTextRed ? @android:color/holo_red_dark :@android:color/black}"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/log_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{log.groupBottomText}"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.circularreveal.CircularRevealLinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/log_info_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5sp"
                android:padding="12dp"
                android:src="@drawable/ic_information_outline"
                android:tint="#03A9F4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/log_day_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{log.groupTimeDayDate}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/log_info_icon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</layout>