<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/log_type_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_phone_incoming"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:layout_marginEnd="20sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/log_duration_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/log_type_image"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/log_name_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todd Dugan"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/log_duration_type"
            app:layout_constraintStart_toEndOf="@id/log_type_image"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/log_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today 1:03 PM"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/log_duration_type"
            app:layout_constraintStart_toEndOf="@id/log_type_image"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/log_return_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:alpha=".5"
            android:layout_marginEnd="20sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>